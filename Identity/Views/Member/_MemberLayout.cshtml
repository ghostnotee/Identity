<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Identity</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Identity.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Identity</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Member" asp-action="Index">Üye Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Editor" asp-controller="Member">Editor ana sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Manager" asp-controller="Member">Manager ana sayfa</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4 flex-md-column">
                <h3>Menü</h3>
                <a class="btn btn-info" asp-action="ExchangeRedirect" asp-controller="Member">Borsa Bilgileri</a>
                <a class="btn btn-info" asp-action="KutahyaPage" asp-controller="Member">Kütahyalı Sayfası</a>
                <a class="btn btn-info" asp-action="ViolencePage" asp-controller="Member">Şiddet içerikli Alan</a>
                <a class="btn btn-info" asp-action="PasswordChange" asp-controller="Member">Şifre Değiştirme</a>
                <a class="btn btn-info" asp-action="UserEdit" asp-controller="Member">User Günceleme</a>
                <a class="btn btn-info" asp-action="Logout" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış yap</a>
            </div>
        </div>

    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - Identity - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>